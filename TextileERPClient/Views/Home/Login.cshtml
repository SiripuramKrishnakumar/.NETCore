@model User

@{ 
    string msg = TempData["ErrorMessage"] == null ? "" : TempData["ErrorMessage"].ToString();
   
}

<input type="hidden" id="swal_msg"/>
<div class="container ">
    <div class="align-items-lg-end form-div">
        <form asp-action="UserAuthentication" asp-controller="Base" method="post">
            <div class="row m-3">
                <div class="col-md-3 ">
                    <label> <strong>User Name:</strong></label>
                </div>
                <div class="col-md-4">
                    <input type="text" required asp-for="@Model.UserName" class="form-control" autocomplete="off"/>
                </div>
            </div>
            <div class="row m-3">
                <div class="col-md-3">
                    <label style="text-align:right;"> <strong>Password:</strong></label>
                </div>
                <div class="col-md-4">
                    <input type="password" required asp-for="@Model.Password" class="form-control" />
                </div>
            </div>
            <div class="row m-3">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success"> Login </button> &nbsp; <button type="reset" class="btn btn-primary">Clear</button>
                </div>
            </div>

        </form>
    </div>
</div>